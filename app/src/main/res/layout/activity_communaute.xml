<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#2196F3"
    tools:context=".CommunauteActivity">


        <LinearLayout
            android:id="@+id/headerLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="16dp">

            <Button
                android:id="@+id/menuButton"
                android:layout_width="112dp"
                android:layout_height="wrap_content"
                android:text="Menu"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/logoImageView"
                android:layout_width="400dp"
                android:layout_height="98dp"
                android:layout_marginStart="16dp"
                android:src="@drawable/gl" />

        </LinearLayout>

    <EditText
        android:id="@+id/searchEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Rechercher un jeu"
        android:background="@drawable/search_edittext_background"
        android:padding="8dp"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/darker_gray"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/headerLayout" />

    <TextView
        android:id="@+id/communityTitleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="CommunautÃ© Elden Ring"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/searchEditText" />

    <LinearLayout
        android:id="@+id/user1Layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/communityTitleTextView">

    <ImageView
        android:id="@+id/user1ProfileImageView"
        android:layout_width="64dp"
        android:layout_height="64dp"
        tools:srcCompat="@drawable/_3da1a85d36eb892aca2715c6fb97034" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/user1UsernameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Utilisateur 1"
            android:textColor="#FF9800"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/user1IdTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID: 123456789"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/user1CommentTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Commentaire de l'utilisateur 1"
            android:textSize="14sp" />

    </LinearLayout>

    </LinearLayout>

        <LinearLayout
            android:id="@+id/user2Layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/user1Layout">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

        <LinearLayout
            android:id="@+id/user2.1Layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/user1Layout">

            <ImageView
                android:id="@+id/user2ProfileImageView"
                android:layout_width="64dp"
                android:layout_height="64dp"
                tools:srcCompat="@drawable/_3da1a85d36eb892aca2715c6fb97034" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/user2UsernameTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Utilisateur 2"
                    android:textColor="#FF9800"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/user2IdTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ID: 987654321"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/user2CommentTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Commentaire de l'utilisateur 2"
                    android:textSize="14sp" />

            </LinearLayout>

        </LinearLayout>

                <TextView
                    android:id="@+id/titleTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Commentaire par console"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/consoleRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@id/titleTextView" />

        </LinearLayout>

        </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
